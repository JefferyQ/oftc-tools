#! /bin/sh

set -e

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DESC="OFTCDNS daemon"
NAME=statbot
DAEMON=/usr/bin/twistd
SCRIPTNAME=/etc/init.d/$NAME
PIDFILE=/var/run/$NAME.pid
RUNDIR=@LOCALSTATEDIR@/$NAME
PYTHONFILE=@LIBDIR@/@PACKAGE@/$NAME.tac

export statbotcfg=@SYSCONFDIR@/@PACKAGE@/statbot.yaml

# Gracefully exit if the package has been removed.
test -x $DAEMON || exit 0

# Start the daemon.
d_start() {
  start-stop-daemon --start --quiet --exec $DAEMON -- \
    --pidfile=$PIDFILE --rundir=$RUNDIR --python=$PYTHONFILE \
    --syslog --prefix=$NAME --no_save
}

# Stop the daemon.
d_stop() {
    start-stop-daemon --oknodo --stop --quiet --retry 10 --pidfile $PIDFILE
}

case "$1" in
  start)
    echo -n "Starting $DESC: $NAME"
    d_start
    echo "."
    ;;
  stop)
    echo -n "Stopping $DESC: $NAME"
    d_stop
    echo "."
    ;;
  restart|force-reload)
    echo -n "Restarting $DESC: $NAME"
    d_stop
    sleep 1
    d_start
    echo "."
    ;;
  configtest)
    /usr/bin/kwalify -f @SYSCONFDIR@/@PACKAGE@/statbot-schema.yaml @SYSCONFDIR@/@PACKAGE@/statbot.yaml
    exit $?
    ;;
  *)
    echo "Usage: $SCRIPTNAME {start|stop|restart|force-reload}" >&2
    exit 1
    ;;
esac

exit 0
