    services: [ irc, irc6 ]
    nodes: 
    - servername: galapagos.oftc.net
      nickname: galapagos
      records: 
      - key: eu-irc6
        values: [ 192.168.1.1 ]
      - key: eu-irc
        values: [ 192.168.1.2 ]
